<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd ">


    <bean id="errorMessageSource"
          class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
        <property name="basename" value="/messages" />
        <property name="defaultEncoding" value="UTF-8"/>
    </bean>

    <bean id="converter" class="org.util.rtc.converter.Converter">
        <constructor-arg ref="errorMessageSource"/>
    </bean>

    <bean id="context" class="org.util.rtc.context.Context"/>

    <bean id="validator" class="org.util.rtc.validation.ParseValidation">
        <constructor-arg ref="converter"/>
        <constructor-arg ref="context"/>
    </bean>
</beans>